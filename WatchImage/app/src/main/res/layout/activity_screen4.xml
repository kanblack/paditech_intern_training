<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pesteam.watchimage.Screen4Activity"
    android:background="#000000">


    <ImageView
        android:transitionName="transition_picture"
        android:src="@drawable/background"
        android:id="@+id/img_big_screen4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        tools:ignore="UnusedAttribute" />

    <LinearLayout
        android:id="@+id/ln_screen4"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:paddingLeft="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/txt_title_img_screen4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sdsdsdsdsds"
        android:textColor="@color/colorWhiteNormal"
        />

    <TextView
        android:textColor="@color/colorWhiteNormal"
        android:layout_marginTop="5dp"
        android:paddingRight="40dp"
        android:text="fdfdfdfdgggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggg"
        android:paddingLeft="10dp"
        android:id="@+id/txt_descrip_img_screen4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
       />
    </LinearLayout>
    <ImageButton
        android:id="@+id/bt_im_back_screen4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_back_img_screen3"
        />
    <ImageButton
        android:id="@+id/bt_im_menu_screen4"
        android:background="@drawable/icon_menu_screen4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ln_screen4"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="11dp"/>
</RelativeLayout>
