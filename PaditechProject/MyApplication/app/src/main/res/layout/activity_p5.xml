<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context="com.toring.myapplication.activity.P5Activity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_heigth"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/tv_done"
        android:layout_width="wrap_content"
        android:paddingRight="@dimen/padding_8dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:paddingLeft="@dimen/padding_8dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/toolbar"
        android:layout_alignBottom="@id/toolbar"
        android:layout_alignParentRight="true"
        android:text="@string/save"
        android:gravity="center"
        android:textSize="@dimen/text_size_normal"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>


    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent">

        <RelativeLayout
            android:id="@+id/rl_option"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/padding_4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/frame"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_big" />
        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_margin="@dimen/margin_4dp"
            android:layout_height="match_parent"
            android:background="@color/text_color_second" />

        <RelativeLayout
            android:id="@+id/rl_draw"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/padding_4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/draw"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_big" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@id/bottom_bar"
        android:layout_marginTop="@dimen/margin_16dp"
        android:background="@color/text_color_second" />

    <com.toring.myapplication.customvie.DrawingView
        android:id="@+id/iv_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/separator"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="@dimen/margin_16dp" />
</RelativeLayout>
