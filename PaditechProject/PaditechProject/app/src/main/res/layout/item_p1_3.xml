<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/iv_car_hospital"
                app:civ_border_color="@color/text_color_second"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/tv_title_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_1"
                android:gravity="center"
                android:padding="@dimen/padding_4dp"
                android:text="Khám SK\nTiêm Vắc xin"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_normal" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/iv_car_hospital"
                app:civ_border_color="@color/text_color_second"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/tv_title_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_2"
                android:gravity="center"
                android:padding="@dimen/padding_4dp"
                android:text="Sổ khám\nPhiếu khám"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_normal" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/iv_car_hospital"
                app:civ_border_color="@color/text_color_second"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/tv_title_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_3"
                android:gravity="center"
                android:padding="@dimen/padding_4dp"
                android:text="Lưu trữ hồ sơ"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_normal" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>