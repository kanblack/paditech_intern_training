<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:padding="10dp"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="70dp"
        android:id="@+id/iv_ava"
        android:src="@drawable/iv_car_hospital"
        android:layout_height="70dp" />

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_horiz_s_24dp"
        android:layout_centerVertical="true"/>

    <RelativeLayout
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_toEndOf="@id/iv_ava"
        android:layout_toStartOf="@id/iv_more"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_des"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_primary"
            android:text="Hoom nay la sinh nhatj ajs fdjfj kdfjkdjf kdfkjdkf dkfjdkfjkd kdjfkdjkf kdjfkdjfkdjf dkfjdkj"/>

        <ImageView
            android:id="@+id/iv_action"
            android:layout_below="@id/tv_des"
            android:layout_width="15dp"
            android:src="@drawable/ic_like"
            android:layout_height="15dp"
            />
        <TextView
            android:layout_marginStart="8dp"
            android:layout_alignBaseline="@id/iv_action"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_normal"
            android:textColor="#224fee"
            android:id="@+id/tv_time_ago"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_des"
            android:text="3 hours ago"
            android:layout_toEndOf="@id/iv_action"/>
    </RelativeLayout>
</RelativeLayout>