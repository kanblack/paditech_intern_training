<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_bia"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:background="@drawable/bg_oval"
        android:backgroundTint="@color/sepa"
        android:padding="16dp"
        android:src="@drawable/ic_photo_camera_white_24dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/iv_bia"
        android:layout_alignEnd="@id/iv_bia"
        android:background="@drawable/bg_oval_green"
        android:backgroundTint="@color/colorPrimary"
        android:src="@drawable/ic_add_w_24dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_bia"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:maxLines="2"
        android:minLines="1"
        android:text="Add to your day"
        android:textColor="@color/text_color_second"
        android:textSize="@dimen/text_size_small" />
</RelativeLayout>